
<div class="d-flex justify-content-center m-3">
  <h1>Lists</h1>
</div>

<div class="d-flex justify-content-center p-3 mb-3">
  <button type="button" class="btn btn-outline-primary"><%= link_to 'Add a new list', new_list_path %></button>
</div>

<div class="container row justify-content-center">
  <% @lists.each do |list| %>
    <div class="col-4">
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= background_image(list) %>)">
        <div class="list_title"><%= link_to list.name, list_path(list) %></div>
      </div>
    </div>
  <% end %>
</div>

